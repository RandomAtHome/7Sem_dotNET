<Window x:Class="GuiVariant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuiVariant"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="140">
            <Button x:Name="directorySelectBtn" Content="Select Directory"/>
            <Button x:Name="startRecognitionBtn" Content="Start Recognition"/>
            <Button x:Name="stopRecognitionBtn" Content="Finish Recognition"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="400" Margin="155,10,0,0" VerticalAlignment="Top" Width="202">
            <Label x:Name="classesDataTitle" Content="Class selector"/>
            <ListBox x:Name="classesDataList" Margin="0,0,-0.4,0" VerticalAlignment="Bottom" Height="375"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="400" Margin="362,10,0,0" VerticalAlignment="Top" Width="422">
            <Label x:Name="imageListTitle" Content="Image List" Margin="0,0,0.4,0"/>
            <ListBox x:Name="imageList" Height="375" Margin="0,0,0.4,0"/>
        </StackPanel>
    </Grid>
</Window>
